{
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"baseUrl": ".",
		"outDir": "dist",
		"removeComments": true,
		"experimentalDecorators": true,
		"target": "es6",
		"emitDecoratorMetadata": true,
		"typeRoots": ["node_modules/@types"],
		"checkJs": true,
		"allowJs": true,
		"types": ["node", "jest"],
		"moduleResolution": "node"
	},
	"include": ["./src/**/*.ts"]
}
