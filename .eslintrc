{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2017,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react", "babel"],
	"rules": {
		"no-empty": "off",
		"react/prop-types": "off",
		"prefer-arrow-callback": "error",
		"no-console": 2,
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-undef": "off",
		"react/display-name": "off",
		"react/no-unescaped-entities": "off",
		"strict": "error"
	},
	"settings": {
		"react": {
			"version": "16.0"
		}
	}
}
